<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    tools:context="com.beyondidentity.embedded.embeddedui.ui.BeyondIdentityRegistrationFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/recovery_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_l"
        android:text="@string/recovery_title"
        android:textAppearance="@style/HeadingS.Bold"
        android:textColor="@color/neutral_90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/recovery_title_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/spacing_l"
        android:background="@color/neutral_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recovery_title" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/danger_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxxl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recovery_title_line"
        app:srcCompat="@drawable/ic_danger" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/recovery_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xl"
        android:layout_marginTop="@dimen/spacing_xl"
        android:layout_marginEnd="@dimen/spacing_xl"
        android:gravity="center"
        android:text="@string/recovery_desc"
        android:textAppearance="@style/TextM"
        android:textColor="@color/neutral_60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/danger_icon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/enter_mail_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xl"
        android:layout_marginTop="@dimen/spacing_xl"
        android:layout_marginEnd="@dimen/spacing_xl"
        android:gravity="center"
        android:text="@string/recovery_enter_your_email_to_recover_your_account"
        android:textAppearance="@style/TextM"
        android:textColor="@color/neutral_60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recovery_description" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/recovery_email_input"
        style="@style/PrimaryInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xl"
        android:layout_marginTop="@dimen/spacing_l"
        android:layout_marginEnd="@dimen/spacing_xl"
        android:hint="@string/recovery_email_address"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enter_mail_hint"
        tools:text="user@beyondidenity.com" />

    <com.beyondidentity.embedded.embeddedui.ui.views.BeyondIdentityLoadingButton
        android:id="@+id/recover_email_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xl"
        android:layout_marginTop="@dimen/spacing_m"
        android:layout_marginEnd="@dimen/spacing_xl"
        android:background="@drawable/primary_danger_button_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recovery_email_input" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/could_not_complete_recovery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xl"
        android:layout_marginTop="@dimen/spacing_m"
        android:layout_marginEnd="@dimen/spacing_xl"
        android:gravity="center"
        android:text="@string/recovery_could_not_complete_recovery"
        android:textAppearance="@style/TextM"
        android:textColor="@color/danger_main"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recover_email_button" />
</androidx.constraintlayout.widget.ConstraintLayout>