<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    tools:context="com.beyondidentity.embedded.embeddedui.ui.BeyondIdentitySettingsFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cred_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_l"
        android:text="@string/cred_info_title"
        android:textAppearance="@style/HeadingS.Bold"
        android:textColor="@color/neutral_90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/cred_info_title_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/spacing_l"
        android:background="@color/neutral_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cred_info_title" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cred_info_cred_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xxxl"
        android:layout_marginTop="@dimen/spacing_jumbo"
        android:layout_marginEnd="@dimen/spacing_xxxl"
        style="@style/BeyondIdentityCardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cred_info_title_line">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/spacing_xxl"
            android:paddingTop="@dimen/spacing_xxxl"
            android:paddingEnd="@dimen/spacing_xxl"
            android:paddingBottom="@dimen/spacing_xxxl">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cred_info_cred_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_cred_key" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cred_info_cred_tenant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_l"
                android:textAppearance="@style/HeadingS"
                android:textColor="@color/neutral_100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cred_info_cred_icon"
                tools:text="Acme Pay" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cred_info_cred_for_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_m"
                android:gravity="center"
                android:textAppearance="@style/TextM"
                android:textColor="@color/neutral_60"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cred_info_cred_tenant"
                tools:text="Credential for Igor's Pixel 5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cred_info_device_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xl"
        android:layout_marginTop="@dimen/spacing_xxl"
        android:text="@string/cred_info_device_info"
        android:textAllCaps="true"
        android:textAppearance="@style/TextM.Bold"
        android:textColor="@color/neutral_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cred_info_cred_container" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cred_info_model_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cred_info_device_info">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cred_info_model_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/spacing_xl"
            android:paddingTop="@dimen/spacing_m"
            android:paddingBottom="@dimen/spacing_m"
            android:text="@string/cred_info_model"
            android:textAppearance="@style/TextM"
            android:textColor="@color/neutral_60"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cred_info_model_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/spacing_m"
            android:paddingEnd="@dimen/spacing_xl"
            android:paddingBottom="@dimen/spacing_m"
            android:textAppearance="@style/TextM"
            android:textColor="@color/neutral_60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Pixel 5" />

        <View
            android:id="@+id/cred_info_model_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/neutral_30"
            app:layout_constraintBottom_toBottomOf="@id/cred_info_model_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cred_info_version_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cred_info_model_container">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cred_info_version_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/spacing_xl"
            android:paddingTop="@dimen/spacing_m"
            android:paddingBottom="@dimen/spacing_m"
            android:text="@string/cred_info_version_label"
            android:textAppearance="@style/TextM"
            android:textColor="@color/neutral_60"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cred_info_version_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/spacing_m"
            android:paddingEnd="@dimen/spacing_xl"
            android:paddingBottom="@dimen/spacing_m"
            android:textAppearance="@style/TextM"
            android:textColor="@color/neutral_60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Android 12" />

        <View
            android:id="@+id/cred_info_version_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/neutral_30"
            app:layout_constraintBottom_toBottomOf="@id/cred_info_version_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cred_info_delete_cred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxxl"
        android:clickable="true"
        android:foreground="?android:selectableItemBackground"
        android:padding="@dimen/spacing_m"
        android:text="@string/cred_info_delete_credential_from_this_device"
        android:textAppearance="@style/HeadingS"
        android:textColor="@color/danger_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cred_info_version_container" />

</androidx.constraintlayout.widget.ConstraintLayout>
