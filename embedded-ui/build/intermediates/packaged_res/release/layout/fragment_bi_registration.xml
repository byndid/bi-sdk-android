<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    tools:context="com.beyondidentity.embedded.embeddedui.ui.BeyondIdentityRegistrationFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/registration_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_l"
        android:text="@string/passwordless_login"
        android:textAppearance="@style/HeadingS.Bold"
        android:textColor="@color/neutral_90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/registration_title_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/spacing_l"
        android:background="@color/neutral_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registration_title" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/registration_credential_status_container"
        style="@style/BeyondIdentityCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_l"
        android:layout_marginTop="@dimen/spacing_xxxl"
        android:layout_marginEnd="@dimen/spacing_l"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registration_title_line">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/spacing_xl">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/check_cred_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/registration_check_credential_status"
                android:textAppearance="@style/HeadingM"
                android:textColor="@color/neutral_70"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/registration_deactivate_old_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                android:gravity="center"
                android:text="@string/registration_deactivate_old_desc"
                android:textAppearance="@style/TextM"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/check_cred_status" />

            <com.beyondidentity.embedded.embeddedui.ui.views.BeyondIdentityLoadingButton
                android:id="@+id/registration_sign_up_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                android:background="@drawable/primary_button_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/registration_deactivate_old_desc" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/what_is_cred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                android:gravity="center"
                android:text="@string/registration_what_is_a_credential"
                android:textAppearance="@style/TextM"
                android:textColor="@color/standard_link"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/registration_sign_up_button"
                app:layout_goneMarginTop="@dimen/spacing_xl" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/could_not_complete_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_m"
                android:gravity="center"
                android:text="@string/registration_could_not_complete_sign_up"
                android:textAppearance="@style/TextM"
                android:textColor="@color/danger_main"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/what_is_cred" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/registration_have_a_cred_elsewhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxl"
        android:layout_marginEnd="@dimen/spacing_s"
        android:text="@string/have_a_credential_elsewhere"
        android:textAppearance="@style/TextS"
        app:layout_constraintEnd_toStartOf="@+id/registration_add_to_device"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registration_credential_status_container" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/registration_add_to_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxl"
        android:text="@string/add_to_this_device"
        android:textAppearance="@style/TextS"
        android:textColor="@color/standard_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/registration_have_a_cred_elsewhere"
        app:layout_constraintTop_toBottomOf="@id/registration_credential_status_container" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/registration_dont_have_access"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_m"
        android:layout_marginEnd="@dimen/spacing_s"
        android:text="@string/don_t_have_access_to_your_credential"
        android:textAppearance="@style/TextS"
        app:layout_constraintEnd_toStartOf="@+id/registration_recover_account"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registration_add_to_device" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/registration_recover_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_m"
        android:text="@string/recover_account"
        android:textAppearance="@style/TextS"
        android:textColor="@color/standard_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/registration_dont_have_access"
        app:layout_constraintTop_toBottomOf="@id/registration_add_to_device" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/registration_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_m"
        android:layout_marginEnd="@dimen/spacing_s"
        android:text="@string/questions_or_issues"
        android:textAppearance="@style/TextS"
        app:layout_constraintEnd_toStartOf="@+id/registration_visit_support"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registration_recover_account" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/registration_visit_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_m"
        android:text="@string/visit_support"
        android:textAppearance="@style/TextS"
        android:textColor="@color/standard_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/registration_questions"
        app:layout_constraintTop_toBottomOf="@id/registration_recover_account" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registration_visit_support"
        app:srcCompat="@drawable/ic_powered_by_bi" />

</androidx.constraintlayout.widget.ConstraintLayout>