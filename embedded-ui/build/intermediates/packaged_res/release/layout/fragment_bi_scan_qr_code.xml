<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    tools:context="com.beyondidentity.embedded.embeddedui.ui.BiScanQrCodeFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/registration_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_l"
        android:text="@string/scan_qr_code"
        android:textAppearance="@style/HeadingS.Bold"
        android:textColor="@color/neutral_90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/registration_title_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/spacing_l"
        android:background="@color/neutral_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registration_title" />

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scan_qr_camera"
        android:layout_width="@dimen/camera_view_size"
        android:layout_height="@dimen/camera_view_size"
        android:layout_marginTop="@dimen/spacing_xl"
        app:autoFocusButtonColor="?attr/colorControlNormal"
        app:autoFocusButtonVisible="false"
        app:flashButtonColor="?attr/colorControlNormal"
        app:flashButtonVisible="false"
        app:frameAspectRatioHeight="1"
        app:frameAspectRatioWidth="1"
        app:frameColor="?attr/colorControlNormal"
        app:frameCornersRadius="0dp"
        app:frameCornersSize="0dp"
        app:frameSize="0.9"
        app:frameThickness="@dimen/spacing_xl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_title_line"
        app:maskColor="#77000000" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scan_qr_no_permissions"
        android:layout_width="@dimen/camera_view_size"
        android:layout_height="@dimen/camera_view_size"
        android:layout_marginTop="@dimen/spacing_xl"
        android:background="@color/neutral_20"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_title_line">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/scan_qr_no_permissions_icon"
            android:layout_width="@dimen/spacing_xxxl"
            android:layout_height="@dimen/spacing_xxxl"
            android:duplicateParentState="true"
            app:layout_constraintBottom_toTopOf="@id/scan_qr_no_permissions_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/ic_camera_unavailable" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/scan_qr_no_permissions_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            android:duplicateParentState="true"
            android:text="@string/camera_access_denied"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scan_qr_no_permissions_icon"
            app:layout_constraintVertical_chainStyle="packed" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/scan_qr_error_scanning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_l"
        android:text="@string/code_not_recognized_please_try_again"
        android:textAppearance="@style/TextM"
        android:textColor="@color/danger_main"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scan_qr_camera" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/scan_qr_locate_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xl"
        android:layout_marginTop="@dimen/spacing_l"
        android:layout_marginEnd="@dimen/spacing_xl"
        android:gravity="center"
        android:text="@string/locate_your_existing_cred"
        android:textAppearance="@style/TextM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scan_qr_error_scanning" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/scan_qr_pls_enable_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_l"
        android:text="@string/scan_qr_please_enable_camera_access"
        android:textAppearance="@style/TextM"
        android:textColor="@color/primary_main"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scan_qr_locate_desc" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/scan_qr_enter_digits_instead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_m"
        android:text="@string/enter_9_digit_code_instead"
        android:textAppearance="@style/TextM"
        android:textColor="@color/primary_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scan_qr_pls_enable_camera" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/scan_qr_dont_have_access_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xl"
        android:layout_marginTop="@dimen/spacing_jumbo"
        android:layout_marginEnd="@dimen/spacing_xl"
        android:gravity="center"
        android:text="@string/don_t_have_access_to_your_other_device"
        android:textAppearance="@style/TextS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scan_qr_enter_digits_instead" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/scan_qr_recover_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xl"
        android:layout_marginTop="@dimen/spacing_s"
        android:layout_marginEnd="@dimen/spacing_xl"
        android:gravity="center"
        android:text="@string/scan_qr_recover_credential"
        android:textAppearance="@style/TextS"
        android:textColor="@color/primary_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scan_qr_dont_have_access_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>