<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    tools:context="com.beyondidentity.embedded.embeddedui.ui.BeyondIdentityAddCredentialFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/add_cred_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_l"
        android:text="@string/add_cred_title"
        android:textAppearance="@style/HeadingS.Bold"
        android:textColor="@color/neutral_90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/add_cred_title_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/spacing_l"
        android:background="@color/neutral_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_cred_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/add_cred_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_xl"
        android:text="@string/add_cred_description"
        android:textAppearance="@style/TextM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_cred_title_line" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/add_cred_create_new"
        style="@style/PrimaryButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xl"
        android:layout_marginTop="@dimen/spacing_xl"
        android:layout_marginEnd="@dimen/spacing_xl"
        android:padding="@dimen/spacing_m_and_half"
        android:text="@string/add_cred_create_new_credential"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_cred_desc" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/add_cred_have_a_cred_elsewhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xl"
        android:layout_marginEnd="@dimen/spacing_s"
        android:text="@string/have_a_credential_elsewhere"
        android:textAppearance="@style/TextS"
        app:layout_constraintEnd_toStartOf="@+id/add_cred_add_to_device"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_cred_create_new" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/add_cred_add_to_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xl"
        android:text="@string/add_to_this_device"
        android:textAppearance="@style/TextS"
        android:textColor="@color/standard_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/add_cred_have_a_cred_elsewhere"
        app:layout_constraintTop_toBottomOf="@id/add_cred_create_new" />

</androidx.constraintlayout.widget.ConstraintLayout>